# ðŸ§  Manas: Youth Mental Wellness Platform
# Environment Configuration Template

# Flask Configuration
SECRET_KEY=your_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=True

# Google AI/ML Services
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json

# Google Cloud Services
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_LOCATION=us-central1

# Speech Services
GOOGLE_SPEECH_TO_TEXT_API_KEY=your_stt_api_key
GOOGLE_TEXT_TO_SPEECH_API_KEY=your_tts_api_key

# Translation Services
GOOGLE_TRANSLATE_API_KEY=your_translate_api_key

# Database Configuration
DATABASE_URL=sqlite:///manas_wellness.db
OFFLINE_DATABASE_URL=sqlite:///manas_offline.db

# Security Configuration
BCRYPT_LOG_ROUNDS=12
JWT_SECRET_KEY=your_jwt_secret_key

# Session Configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=manas.log

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379

# Crisis Detection Configuration
CRISIS_ALERT_THRESHOLD=0.8
MODERATE_RISK_THRESHOLD=0.5

# Accessibility Configuration
EYE_TRACKING_ENABLED=True
VOICE_CONTROL_ENABLED=True
GESTURE_RECOGNITION_ENABLED=True

# Multi-language Configuration
DEFAULT_LANGUAGE=english
SUPPORTED_LANGUAGES=english,hindi,telugu,tamil,bengali,gujarati,marathi

# Offline Configuration
OFFLINE_SYNC_INTERVAL=300  # 5 minutes
OFFLINE_CACHE_DURATION=86400  # 24 hours

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=True

# Development Configuration
DEBUG_TOOLBAR_ENABLED=False
PROFILER_ENABLED=False

# Production Configuration (set these for production deployment)
# SSL_REDIRECT=True
# SECURE_HEADERS=True
# CSRF_PROTECTION=True